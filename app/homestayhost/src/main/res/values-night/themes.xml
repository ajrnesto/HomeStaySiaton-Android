<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HomeStaySiaton" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_variant</item>
        <item name="colorSecondaryVariant">@color/primary_variant</item>
        <item name="colorOnSecondary">@color/primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HomeStaySiaton" parent="Base.Theme.HomeStaySiaton" />

    <style name="BottomNavBar">
        <item name="colorSecondaryContainer">@color/white</item>
    </style>

    <style name="TextInputEditText" parent="@style/Widget.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="android:fontFamily">@font/dmsans_regular</item>
        <item name="android:paddingVertical" tools:targetApi="o">18dp</item>
    </style>

    <style name="TextInputLayout" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="Button" parent="@style/Widget.Material3.Button">
        <item name="android:fontFamily">@font/dmsans_extrabold</item>
        <item name="android:paddingVertical" tools:targetApi="o">12dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="ButtonSecondary" parent="@style/Widget.Material3.Button.TonalButton">
        <item name="android:fontFamily">@font/dmsans_extrabold</item>
        <item name="backgroundTint">@color/gray_light</item>
        <item name="android:paddingVertical" tools:targetApi="o">12dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="ButtonText" parent="@style/Widget.Material3.Button.TextButton">
        <item name="android:fontFamily">@font/dmsans_regular</item>
        <item name="android:paddingVertical" tools:targetApi="o">12dp</item>
    </style>
</resources>